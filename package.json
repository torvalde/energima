{
  "name": "energima",
  "version": "0.1.0",
  "homepage": "https://torvalde.github.io/energima/",
  "description": "Test project for Energima frontend stack",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.5",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/user-event": "^10.1.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.4",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.4",
    "antd": "^4.1.4",
    "axios": "^0.19.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "typescript": "^4.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage",
    "update-storybook-screenshots": "yarn loki update",
    "test-storybook-screenshots": "yarn loki test",
    "approve-storybook-screenshots": "yarn loki update",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "pretest-ci": "build-storybook",
    "test-ci": "loki --requireReference --reactUri file:./storybook-static",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.18",
    "@storybook/storybook-deployer": "^2.8.5",
    "@types/axios-mock-adapter": "^1.10.0",
    "@types/redux-mock-store": "^1.0.2",
    "axios-mock-adapter": "^1.18.1",
    "cypress": "^4.4.1",
    "cz-conventional-changelog": "3.1.0",
    "husky": ">=4",
    "jest-when": "^2.7.1",
    "lint-staged": ">=10",
    "loki": "^0.20.3",
    "prettier": "2.0.5",
    "redux-mock-store": "^1.5.4"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "prettier --write"
  },
  "storybook-deployer": {
    "gitUsername": "Storybook Deployer",
    "gitEmail": "action@github.com",
    "commitMessage": "Deploy Storybook to GitHub Pages"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ]
  }
}
